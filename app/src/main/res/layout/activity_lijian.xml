<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/re_youhu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@mipmap/biaotil"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/left_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:src="@mipmap/nav_icon_back_default" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:text="立减券"/>


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_below="@+id/re_youhu"
        android:layout_marginBottom="45dp"
        android:layout_height="match_parent"/>

    <include
        android:id="@+id/shuju"
        android:layout_below="@+id/recycler_view"
        layout="@layout/emtey_shuju"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></include>


    <TextView
        android:id="@+id/tv_bushi"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_height="45dp"
        android:background="@color/gray_o7d"
        android:gravity="center"
        android:text="不使用优惠券"/>

</RelativeLayout>