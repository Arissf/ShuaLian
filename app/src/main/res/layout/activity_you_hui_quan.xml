<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/re_youhu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@mipmap/biaotil"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/left_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:src="@mipmap/nav_icon_back_default" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:text="优惠券"/>


    </RelativeLayout>

    <com.mrgao.luckrecyclerview.LucklyRecyclerView
        android:id="@+id/yRecyclerView"
        android:layout_below="@+id/re_youhu"
        android:layout_width="match_parent"
        android:layout_marginBottom="45dp"
        android:layout_height="match_parent"/>


    <TextView
        android:id="@+id/tv_bushi"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_height="45dp"
        android:background="@color/gray_o7d"
        android:gravity="center"
        android:text="不使用优惠券"/>


</RelativeLayout>
