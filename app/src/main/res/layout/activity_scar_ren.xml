<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ScarRenActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@mipmap/biaotil"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:text="支付确认"/>


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支付金额"
        android:layout_marginTop="35dp"
        android:textSize="16sp"
        android:textColor="@color/gray_33"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥"
        android:layout_marginTop="12dp"
        android:textSize="16sp"
        android:textColor="@color/clorlvs"
        />

        <TextView
            android:id="@+id/tv_amout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200"
            android:layout_marginTop="12dp"
            android:textSize="24sp"
            android:textColor="@color/clorlvs"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_stationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商家：某某加油站"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        android:textColor="@color/clorlvs"
        />



    <LinearLayout
        android:id="@+id/lier_2"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/gray_eee"
            />
        <RelativeLayout
            android:id="@+id/rl_jiayou"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/huishede"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:text="会员等级"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_45"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true">
                <TextView
                    android:id="@+id/tv_dnegji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:textSize="15sp"
                    android:textColor="@color/gray_33"
                    android:text="LV2"/>

                <TextView
                    android:id="@+id/tv_dikou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="7dp"
                    android:paddingLeft="7dp"
                    android:textSize="11sp"
                    android:paddingBottom="1dp"
                    android:textColor="@color/white"
                    android:paddingTop="1dp"
                    android:text="享9.8折"
                    android:background="@drawable/shap_hongse"/>


            </LinearLayout>


        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/gray_eee"
            />
        <RelativeLayout
            android:id="@+id/re_diyong"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/huishede"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:text="优惠券抵用"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_45"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true">
                <TextView
                    android:id="@+id/tv_yhjmoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:textSize="15sp"
                    android:textColor="@color/gray_33"
                    android:text="-0元"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/croi_more"/>

            </LinearLayout>


        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/gray_eee"
            />
        <RelativeLayout
            android:id="@+id/re_lijian"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/huishede"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:text="立减金额"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true">
                <TextView
                    android:id="@+id/tv_lijmoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:textSize="15sp"
                    android:textColor="@color/gray_33"
                    android:text="-0元"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/croi_more"/>

            </LinearLayout>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/gray_eee"></View>
        <RelativeLayout
            android:id="@+id/re_jifne"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5">

            <TextView
                android:id="@+id/tv_jifen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/huishede"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:text="可用360积分抵用36元"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_45"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true">
                <CheckBox
                    android:id="@+id/checkbox3"
                    android:layout_width="31dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:checked="true"
                    android:background="@drawable/user_selector_buttons"
                    android:layout_height="17dp"
                    android:button="@null"/>
            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#F5FAFF"
        />


    <RelativeLayout
        android:id="@+id/ler_yue"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="15dp"
        android:layout_marginTop="@dimen/dp_5">

        <ImageView
            android:id="@+id/imgwei"
            android:layout_width="25dp"
            android:layout_height="29dp"
            android:layout_centerVertical="true"
            android:background="@drawable/yues"/>

        <TextView
            android:id="@+id/te_yue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_33"
            android:layout_toRightOf="@+id/imgwei"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:text="余额支付(¥363.50)"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_45"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true">


            <ImageView
                android:id="@+id/im_xunze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/coir_xuanz"/>
        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/gray_eee"></View>

    <RelativeLayout
        android:id="@+id/ler_weix"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="15dp"
        android:layout_marginTop="@dimen/dp_5">

        <ImageView
            android:id="@+id/imgwei2"
            android:layout_width="29dp"
            android:layout_height="26dp"
            android:layout_centerVertical="true"
            android:background="@drawable/weixins"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_33"
            android:layout_toRightOf="@+id/imgwei2"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:text="微信支付"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_45"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true">


            <ImageView
                android:id="@+id/im_xunze1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/coir_weix"/>
        </LinearLayout>


    </RelativeLayout>


    <Button
        android:id="@+id/queding"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="刷脸支付"
        android:textSize="15sp"
        android:layout_marginTop="76dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:textColor="@color/white"
        android:background="@drawable/shap_fanhui_lv"/>

</LinearLayout>