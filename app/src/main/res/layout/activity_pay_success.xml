<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">



    <LinearLayout
        android:id="@+id/lise"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@mipmap/biaotil"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:text="支付成功"/>


    </LinearLayout>

    <ImageView
        android:id="@+id/shibai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lise"
        android:layout_marginTop="40dp"
        android:background="@mipmap/cior_paysucces"/>

    <TextView
        android:id="@+id/tv_shibail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shibai"
        android:layout_centerHorizontal="true"
        android:textColor="#333333"
        android:textSize="15sp"
        android:text="支付成功"/>

    <LinearLayout
        android:id="@+id/lineras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/tv_shibail"
        android:visibility="gone"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_shagnye"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/shap_fanhui_bai_lv"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#909090"
            android:text="关闭"/>

        <TextView
            android:id="@+id/tv_chongxinzhifu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/shap_fanhui_lv"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="重新支付"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_shibail"
        android:layout_marginTop="30dp"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="优惠金额"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginRight="15dp"
                android:textColor="@color/color_default"
                android:layout_alignParentRight="true"
                android:text="- ¥5"/>



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="实付金额"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginRight="15dp"
                android:textColor="@color/color_default"
                android:layout_alignParentRight="true"
                android:text="- ¥5"/>


        </RelativeLayout>
        <Button
            android:id="@+id/queding"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="确定"
            android:textSize="15sp"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:textColor="@color/white"
            android:background="@drawable/shap_fanhui_lv"/>

    </LinearLayout>




</RelativeLayout>