<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/res"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@mipmap/cior_aiyouz"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img1"
        android:layout_marginTop="40dp"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_30"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff333333"
            android:textSize="18sp"
            android:text="欢迎登录"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/cior_yzbm"/>

            <EditText
                android:id="@+id/et_yzphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入油站编码"
                android:inputType="textEmailAddress"
                android:textSize="14sp"
                android:layout_marginLeft="15dp"
                android:background="@null"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_f2"
            android:layout_marginTop="3dp"
            ></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/cior_yhzh"/>

            <EditText
                android:id="@+id/et_yzaccount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入账户"
                android:inputType="textEmailAddress"
                android:textSize="14sp"
                android:layout_marginLeft="15dp"
                android:background="@null"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_f2"
            android:layout_marginTop="3dp"
            ></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/igw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/cior_mima"/>

            <EditText
                android:id="@+id/et_yzpassion"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/igw"
                android:layout_centerVertical="true"
                android:inputType="textPassword"
                android:hint="请输入密码"
                android:textSize="14sp"
                android:layout_marginLeft="15dp"
                android:background="@null"/>

            <RelativeLayout
                android:id="@+id/relas"
                android:layout_width="40dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/edt_mima"
                    android:layout_width="21dp"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="14sp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/shop_yanjinbi"
                    android:layout_marginLeft="45dp"/>
            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_f2"
            android:layout_marginTop="3dp"
            ></View>


        <RelativeLayout
            android:id="@+id/rekat_3"
            android:layout_width="match_parent"
            android:layout_below="@+id/rekat_2"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:layout_marginRight="25dp"
            android:layout_height="40dp">

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/user_selector_mianmi"
                android:layout_height="20dp"
                android:button="@null"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/checkbox"
                android:textSize="14sp"
                android:text="记住密码"/>




        </RelativeLayout>



        <Button
            android:id="@+id/bt_logins"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="35dp"
            android:textColor="@color/white"
            android:text="登录"
            android:textSize="15sp"
            android:background="@drawable/shap_fanhui_lv"/>


    </LinearLayout>

</RelativeLayout>