<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/liners"
    android:background="@color/white"
    tools:context=".XuanOilActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@mipmap/biaotil"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:text="选择油品"/>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textColor="@color/color_65"
            android:textSize="17sp"
            android:text="选择油品"/>





    </LinearLayout>


    <com.hengshitong.shualianzhifs.view.AntGridView
        android:id="@+id/girdvie1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:columnWidth="120dp"
        android:numColumns="4"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="15dp"
        android:background="@color/gray_eee"></View>

    <com.hengshitong.shualianzhifs.view.AntGridView
        android:id="@+id/girdvie2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:columnWidth="150dp"
        android:numColumns="4"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_qian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:textSize="27sp"
            android:text="¥"/>


        <EditText
            android:id="@+id/ed_jines"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/tv_qian"
            android:layout_centerVertical="true"
            android:inputType="number"
            android:layout_marginRight="11dp"
            android:textColor="@color/gray_33"
            android:layout_marginLeft="20dp"
            android:textColorHint="#999999"
            android:hint="请输入金额"
            />

        <ImageView
            android:id="@+id/images"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/image_jiax"/>


    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rel_jiayouy"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_33"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:text="选择加油员"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_45"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true">
            <TextView
                android:id="@+id/jiayouy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:textSize="15sp"
                android:text="一号加油员 "/>

        </LinearLayout>


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="15dp"
        android:background="#F1F6FF"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Button
            android:id="@+id/queding"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="确定"
            android:textSize="15sp"
            android:layout_marginTop="26dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:textColor="@color/white"
            android:background="@drawable/shap_fanhui_lv"/>

    </LinearLayout>



</LinearLayout>